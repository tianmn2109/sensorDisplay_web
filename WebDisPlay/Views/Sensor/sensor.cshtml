    Layout = null;
}

<html>
<head>


    <script src="http://code.jquery.com/jquery-2.1.3.js" type="text/javascript"></script>
    <script src="http://code.highcharts.com/highcharts.js" type="text/javascript"></script>
    <script src="http://code.highcharts.com/highcharts-more.js"></script>
    <script src="http://code.highcharts.com/modules/solid-gauge.src.js"></script>



    <link rel="stylesheet" href="../../Content/amazeui.switch.css" />
    <link rel="stylesheet" href="../../Content/amazeui.min.css" />
    <link rel="stylesheet" href="../../Content/amazeui.css" />
    <script src="../../Scripts/amazeui.switch.js"></script>
    <script src="../../Scripts/amazeui.switch.min.js"></script>
    <script src="../../Scripts/amazeui.min.js"></script>

    <link rel="stylesheet" href="../../Content/switchery.min.css" />
    <script src="../../Scripts/switchery.js"></script>


    <script src="../../Scripts/fusioncharts.js"></script>
    <script src="../../Scripts/fusioncharts.charts.js"></script>
    <script src="../../Scripts/fusioncharts.widgets.js"></script>
    <script src="../../Scripts/fusioncharts.theme.fint.js"></script>

    <script type="text/javascript" language="javascript" src="../../Scripts/sensordis.js" charset="gb2312"></script>
    <style type="text/css">
        .amz-banner {
            background-color: #f8f3f3;
            height: 220px;
            margin: auto;
            // background-image :;
        }
    </style>

</head>

<body>
    <header class="am-topbar am-topbar-inverse" style="margin:auto">
        <h1 class="am-topbar-brand">
            <a href="#">Smart Transducer Network Platform</a>
        </h1>

    </header>
    <div class="amz-banner">
        <div class="amz-container" style="padding-left:10%;padding-top:4%;" data-am-scrollspy="{animation: 'scale-up', repeat: false}">

            <h1>STNP 监控平台</h1>
            <p>显示传感器的采样信息、控制作动器作动。</p>
        </div>
    </div>
    <div id="body" style="width:100%; height:100%;">
        <div id="left-select" style="width:20%; height: 100%; float:left">
            <label style="padding-left:15%;padding-top:15%;">过滤选项</label>
            <div id="filter1" style="padding-top:15%;padding-left:8%">
                <label>TBIM</label>
                <select id="select_tbim" data-am-selected="{btnWidth: '40%', btnSize: 'sm', btnStyle: 'secondary'}">
                    <option value="a">All</option>
                </select>
                <script type="text/javascript">
                    addSelectTBIM(select_tbim);
                </script>
            </div>
            <div id="filter2" style="padding-top:15%;padding-left:8%">
                <label>TYPE</label>
                <select id="select_type" data-am-selected="{btnWidth: '40%', btnSize: 'sm', btnStyle: 'secondary'}">
                    <option value="a">ALL</option>
                    <option value="a">Speed</option>
                    <option value="b">Temperature</option>
                    <option value="o">Fuel quantity</option>
                    <option value="m">Acceleration</option>
                    
                </select>
                
            </div>

            <div id="leftW" style="padding-top:20%;">
                <!-- 链接触发器， href 属性为目标元素 ID -->

                <a style="padding-left:10%;" href="#doc-oc-demo1" data-am-offcanvas>更多信息</a>

                <!-- 侧边栏内容 -->
                <div id="doc-oc-demo1" class="am-offcanvas">
                    <div class="am-offcanvas-bar">
                        <div class="am-offcanvas-content">
                            <p>
                                我不愿让你一个人 <br />
                                承受这世界的残忍 <br />
                                我不愿眼泪陪你到 永恒
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="tbims" style="width: 80%; float: left">
            <script type="text/javascript" charset="utf-8">

            </script>
        </div>
        
            <footer style="height:300px;text-align:center;">
                <p>&copy; @DateTime.Now.Year - STNP应用程序</p>
            </footer>
       
    </div>

    <script type="text/javascript" charset="utf-8">
        createDisNode('tbims', select_tbim, select_type);
        // thermometerSensor('tbims');
        // batterySensor('tbims');
        // containerSensor('tbims');
    </script>

    
</body>


</html>
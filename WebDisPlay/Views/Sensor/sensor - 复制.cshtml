@{
    Layout = null;
}

<html>
<head>
    <title> sensor diaplay for test </title> 
    <script src="http://code.jquery.com/jquery-2.1.3.js" type="text/javascript"></script>
    <script src="http://code.highcharts.com/highcharts.js" type="text/javascript"></script>
    <script src="http://code.highcharts.com/highcharts-more.js"></script>
    <script src="http://code.highcharts.com/modules/solid-gauge.src.js"></script>
    <script src="../../Scripts/sensordis.js"></script>
    <script src="../../Scripts/amazeui.switch.js"></script>
    <script src="../../Scripts/amazeui.switch.min.js"></script>
    <script src="../../Scripts/amazeui.min.js"></script>
    <link rel="stylesheet" href="../../Content/amazeui.switch.css" />
    <link rel="stylesheet" href="../../Content/amazeui.min.css" />

    
</head>
<body>
    <div id="total" style="width:100%; height:100%;">
        <div id="left-select" style="width:20%;float:left">
            <div id="filter1" style="padding-top:15%;padding-left:8%">
                <p1>TBIM</p1>
                <select  data-am-selected="{btnWidth: '40%', btnSize: 'sm', btnStyle: 'secondary'}">
                    <option value="a">All</option>
                    <option value="b">TBIM-1</option>
                    <option value="o">TBIM-2</option>
                    <option value="m">TBIM-3</option>
                </select>
            </div>
            <div id="filter2" style="padding-top:15%;padding-left:8%">
                <p1>TYPE</p1>
                <select data-am-selected="{btnWidth: '40%', btnSize: 'sm', btnStyle: 'secondary'}">
                    <option value="a">Speed</option>
                    <option value="b">Temperature</option>
                    <option value="o">Fuel quantity</option>
                    <option value="m">Acceleration</option>
                </select>
            </div>
          </div>
            <div id="tbims" style="width: 80%; float: left">

                <div id="sensor1" style="width:20%; height: 30%; float:left">
                    <script type="text/javascript">
                        speedSensor('sensor1', 'Speed', -150, 150);
                    </script>
                </div>
                <div id="sensor2" style="width:20%; height: 30%; float:left">
                    <script type="text/javascript">
                        heightSensor('sensor2', 'Height', -150, 150);
                    </script>
                </div>
                <div id="sensor3" style="width:20%; height: 30%; float:left">
                    <script type="text/javascript">
                        temperatureSensor('sensor3', 'Temperature', -150, 150);
                    </script>
                </div>
                <div id="sensor4" style="width:20%; height: 30%; float:left">
                    <script type="text/javascript">
                        solidGague('sensor4');
                    </script>
                </div>
                <div id="sensor5" style="width:20%; height: 30%; float:left">
                    <script type="text/javascript">
                        VUmeter('sensor5');
                    </script>
                </div>
                <div id="sensor6" style="width:20%; height: 30%; float:left">
                    <script type="text/javascript">
                        pressureSensor('sensor6', 'Pressure', -150, 150);
                    </script>
                </div>
                <div id="sensor7" style="width:20%; height: 30%; float:left">
                    <script type="text/javascript">
                        fuelSensor('sensor7', 'Fuel Quantity', -150, 150);
                    </script>
                </div>
                <div id="sensor8" style="width:20%; height: 30%; float:left">
                    <div id="switch-text" style="height:50%;text-align:center"><p1>Switch</p1></div>
                    <div id="swith-graph" style="height:15%;text-align:center"><input type="checkbox" data-am-switch data-off-color="warning" /></div>

                </div>
            </div>
        </div>
</body>
</html>